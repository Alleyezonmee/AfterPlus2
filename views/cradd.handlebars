<section id="signup" class="signup-section">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-lg-8 mx-auto text-center">
            <h2 class="text-white mb-5">Fill in the following details!</h2>
            {{#if errors}}
              {{#each errors}}
               <div class="alert alert-danger">
                {{msg}}
               </div>
              {{/each}}
            {{/if}} 
             {{#if success_msg}} 
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}} 
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}} 
            <div class="alert alert-danger">{{error}}</div>
    {{/if}}
            <form method="post" action="/users/cr">
              <div class="form-group">
               <input type="text" class="form-control" placeholder="Name" name="name">
              </div>
              <div class="form-group">
               <input type="email" class="form-control" placeholder="Email" name="email">
              </div>
              <div class="form-group">
               <input type="text" class="form-control" placeholder="College Name" name="cname">
              </div>
              <div class="form-group">
               <textarea rows="2" cols="10" class="form-control" name="location" placeholder="Address"></textarea>
              </div>
              <label style="color: white;">Courses Provided</label><br>
              <div class="form-check-inline">
               <label class="form-check-label" style="color: white;">
                <input type="checkbox" class="form-check-input" value="1" name="engg" checked>Engineering 
               </label>
              </div>
              <div class="form-check-inline">
               <label class="form-check-label" style="color: white;">
                <input type="checkbox" class="form-check-input" value="1" name="med">Medical Sciences
               </label>
              </div>
              <div class="form-check-inline">
               <label class="form-check-label" style="color: white;">
                <input type="checkbox" class="form-check-input" value="1" name="mgmt">Management
               </label>
              </div>
              <div class="form-group"></div>
             <button type="submit" class="btn btn-primary mx-auto">Submit</button>
            </form>
          </div>
        </div>
      </div>
</section>