<section id="signup" class="signup-section">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-lg-8 mx-auto text-center">

            <i class="fas fa-user-plus fa-3x mb-2 text-white"></i>
            <h2 class="text-white mb-5">Sign Up for Free!</h2>
            {{#if errors}}
              {{#each errors}}
               <div class="alert alert-danger">
                {{msg}}
               </div>
              {{/each}}
            {{/if}} 
            <form method="post" action="/users/register">
             <div class="form-group">
               <input type="text" class="form-control" placeholder="Name" name="name">
              </div>
              <div class="form-group">
               <input type="text" class="form-control" placeholder="Username" name="username">
              </div>
              <div class="form-group">
               <input type="email" class="form-control" placeholder="Email" name="email">
              </div>
              <div class="form-group">
               <input type="password" class="form-control" placeholder="Password" name="password">
              </div>
              <div class="form-group">
               <input type="password" class="form-control" placeholder="Confirm Password" name="password2">
              </div>
              <div class="form-check-inline">
               <label class="form-check-label" style="color: white;">
                <input type="radio" class="form-check-input" name="reason" checked value="1">College Representative
               </label>
              </div>
              <div class="form-check-inline">
               <label class="form-check-label" style="color: white;">
                <input type="radio" class="form-check-input" name="reason" value="2">Normal User
               </label>
             </div>
             <div class="form-group"></div>
             <button type="submit" class="btn btn-primary mx-auto">Submit</button>
            </form>
          </div>
        </div>
      </div>
</section>